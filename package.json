{
  "name": "portfolio-gateway-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:server": "npm run dev --workspace=game-server",
    "dev:all": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=game-server\"",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:server": "npm run build --workspace=game-server",
    "start": "npm run start --workspace=frontend",
    "deploy:frontend": "npm run build --workspace=frontend",
    "deploy:server": "npm run build --workspace=game-server",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "description": "Portfolio Gateway Monorepo - Frontend (Vercel) + Game Server (Railway)",
  "author": "LimJang",
  "license": "MIT"
}
