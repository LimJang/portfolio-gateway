{
  "name": "portfolio-gateway-frontend",
  "version": 2,
  "buildCommand": "cd packages/frontend && npm run build",
  "outputDirectory": "packages/frontend/.next",
  "installCommand": "npm install && npm run install:all",
  "framework": "nextjs",
  "functions": {
    "packages/frontend/app/api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/packages/frontend/app/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_GAME_SERVER_URL": "@game_server_url"
  }
}
