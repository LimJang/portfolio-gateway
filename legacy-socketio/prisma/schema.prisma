// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Message {
  id        String   @id @default(cuid())
  content   String
  username  String
  timestamp DateTime @default(now())
  userId    String?

  @@map("messages")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  joinedAt DateTime @default(now())

  @@map("users")
}
